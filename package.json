{
  "name": "@liquid-justice/design-system",
  "version": "1.1.0",
  "description": "Modern Justice Design System - Premium UI components for legal tech applications",
  "type": "module",
  "main": "./dist/liquid-justice.cjs",
  "module": "./dist/liquid-justice.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/liquid-justice.mjs",
      "require": "./dist/liquid-justice.cjs"
    },
    "./styles": "./dist/liquid-justice.css"
  },
  "files": [
    "dist",
    "README.md",
    "DESIGN_PRINCIPLES.md"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "analyze": "open dist/stats.html",
    "size": "size-limit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:storybook": "test-storybook",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "design-system",
    "ui-components",
    "react",
    "typescript",
    "legal-tech",
    "accessibility",
    "wcag",
    "glassmorphism",
    "liquid-glass"
  ],
  "author": "Liquid Justice",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "gsap": "^3.12.7",
    "lucide-react": "^0.468.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@chromatic-com/storybook": "^4.1.3",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/addon-onboarding": "^10.0.8",
    "@storybook/react-vite": "^10.0.8",
    "@storybook/test-runner": "^0.24.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "autoprefixer": "^10.4.20",
    "axe-playwright": "^2.2.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "happy-dom": "^20.0.10",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.2.0",
    "postcss": "^8.4.49",
    "rollup-plugin-visualizer": "^6.0.5",
    "size-limit": "^11.2.0",
    "storybook": "^10.0.8",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "vite": "^6.0.7",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^4.0.10"
  }
}
